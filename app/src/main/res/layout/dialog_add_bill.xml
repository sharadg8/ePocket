<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharad.epocket.bills.AddBillDialogFragment">
    <LinearLayout
        android:id="@+id/ab_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="24dp">
            <View
                android:id="@+id/ab_accent_box"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/accent"
                android:focusableInTouchMode="true"
                android:focusable="true"/>
            <TextView
                android:id="@+id/ab_title_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="24dp"
                android:text="BILLS"
                android:textSize="24dp"
                android:textColor="@color/accent"/>
            <ImageButton
                android:id="@+id/ab_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:src="@drawable/ic_close_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/accent"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="24dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ab_til_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ab_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="30"
                    android:hint="Title"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ab_til_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ab_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789."
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="10"
                    android:inputType="number"
                    android:hint="Amount"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/ab_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="TODAY"
                        android:textColor="@android:color/darker_gray"
                        android:drawableTint="@android:color/darker_gray"
                        android:drawableLeft="@drawable/ic_event_black_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/ab_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="Default"
                        android:textColor="@android:color/darker_gray"
                        android:drawableTint="@android:color/darker_gray"
                        android:drawableLeft="@drawable/ic_account_box_black_24dp"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/ab_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/accent"
                    android:text="SAVE"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ab_closing_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:layout_alignTop="@+id/ab_frame"
        android:layout_alignBottom="@+id/ab_frame"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/ab_done_icon"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:src="@drawable/ic_done_black_24dp"
            android:tint="@android:color/white"
            android:padding="16dp"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/ab_done_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Bill saved successfully!"
            android:textSize="18sp"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>