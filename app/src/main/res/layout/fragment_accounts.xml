<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sharad.epocket.utils.SnappyRecyclerView
            android:id="@+id/recyclerView"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="148%"
            android:background="@color/primary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </android.support.percent.PercentRelativeLayout>

    <com.sharad.epocket.utils.FloatingActionMenu
    android:id="@+id/fabMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@android:color/white"
        android:src="@drawable/ic_trending_down_black_24dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@android:color/white"
        android:src="@drawable/ic_swap_horiz_black_24dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@android:color/white"
        android:src="@drawable/ic_trending_up_black_24dp"/>
    </com.sharad.epocket.utils.FloatingActionMenu>
</FrameLayout>
