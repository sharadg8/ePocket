<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_height"
    android:minWidth="@dimen/navigation_min_width"
    android:orientation="vertical"
    android:paddingBottom="@dimen/navigation_padding_bottom"
    android:paddingLeft="@dimen/navigation_padding_left"
    android:paddingRight="@dimen/navigation_padding_right"
    android:background="?selectableItemBackgroundBorderless"
    android:paddingTop="@dimen/navigation_padding_top_inactive">
    <ImageView
        android:id="@+id/navigation_item_icon"
        android:layout_width="@dimen/navigation_icon"
        android:layout_height="@dimen/navigation_icon"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />
    <TextView
        android:id="@+id/navigation_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:lines="1"
        android:textSize="@dimen/navigation_text_size_inactive"
        tools:text="Label One"/>
</FrameLayout>