<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".cards.AddCardActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">
            <android.support.v7.widget.CardView
                android:id="@+id/cardFrontView"
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="208%"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:elevation="14dp"
                app:cardCornerRadius="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <android.support.v7.widget.CardView
                android:id="@+id/cardBackView"
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="208%"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:elevation="14dp"
                app:cardCornerRadius="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </android.support.percent.PercentRelativeLayout>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView2"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/c_add_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:minEms="12"
                        android:maxLength="22"
                        android:textAllCaps="true"
                        android:typeface="monospace"
                        android:inputType="textFilter"
                        android:hint="Name on Card"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/c_add_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:minEms="11"
                        android:maxLength="19"
                        android:typeface="monospace"
                        android:inputType="textFilter"
                        android:hint="Card Number"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/c_add_expiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:minEms="5"
                        android:maxLength="5"
                        android:typeface="monospace"
                        android:digits="0123456789/"
                        android:inputType="textFilter|number"
                        android:hint="Expiry"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/c_add_cvv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:minEms="3"
                        android:maxLength="3"
                        android:typeface="monospace"
                        android:digits="0123456789"
                        android:inputType="textFilter|number"
                        android:hint="CVV"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/c_add_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:minEms="4"
                        android:maxLength="4"
                        android:digits="0123456789"
                        android:inputType="textFilter|number"
                        android:hint="PIN"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/c_add_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:minEms="8"
                        android:maxLength="14"
                        android:digits="0123456789+"
                        android:inputType="textFilter|phone"
                        android:hint="Contact"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
