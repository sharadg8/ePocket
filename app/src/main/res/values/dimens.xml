    <dimen name="keyguard_security_height">400dp</dimen>

    <!-- Max Height of the sliding KeyguardSecurityContainer (includes 2x keyguard_security_view_margin) -->
    <dimen name="keyguard_security_max_height">450dp</dimen>

    <!-- Circle button dimension -->
    <dimen name="color_circle_diameter">48dp</dimen>

    <dimen name="fvp_default_circle_radius">4dp</dimen>
    <dimen name="fvp_default_circle_padding">12dp</dimen>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="header_height">150dp</dimen>

